@model ProjekatPPP.Models.BO.FakturaBO

@{
    ViewData["Title"] = "Edit";
}

<h1>Izmeni podatke o fakturi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idFakture">ID fakture</label>
                <input asp-for="idFakture" />
            </div>
            <div class="form-group">
                <label asp-for="pib">PIB</label>
                <input asp-for="pib" />
            </div>
            <div class="form-group">
                <label asp-for="cena">Cena</label>
                <input asp-for="cena" />
            </div>
            <div class="form-group">
                <label asp-for="idKupca">ID kupca</label>
                <input asp-for="idKupca" />
            </div>
            <div class="form-group">
                <label asp-for="idMasine">ID Masine</label>
                <input asp-for="idMasine" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllFakture">Nazad na listu</a>
</div>

